# Environment Variables

# Spotify API Credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:3000/callback

# YouTube Data API v3 Credentials (Required for bidirectional sync)
YOUTUBE_CLIENT_ID=your_google_oauth_client_id_here
YOUTUBE_CLIENT_SECRET=your_google_oauth_client_secret_here
YOUTUBE_REDIRECT_URI=http://127.0.0.1:3000/auth/youtube/callback

# Server Configuration
PORT=3000

# Database (Optional - for storing sync history)
DATABASE_URL=sqlite:./sync_history.db
